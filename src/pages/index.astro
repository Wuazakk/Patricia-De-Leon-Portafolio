---
import Layout from "../layouts/Layout.astro";
import DancerSection from "../components/DancerSection.astro";
import { Image } from "astro:assets";
import underquoteImg from "../optimizedPhotos/underquote.webp";
import DescriptionSection from "../components/DescriptionSection.astro";
import DancerInfoSection from "../components/DancerInfoSection.astro";
---

<Layout>
  <main>
    <section id="home" class="section">
      <img
        src="../photos/homeprofile.png"
        alt="home profile"
        loading="eager"
        class="home-profile max-h-[800px] max-w-[600px] mx-auto unselectable"
      />
      <div>
        <p class="text-3xl quote text-center opacity-80 mx-16">
          “And those who were seen dancing were thought to be insane by those
          who could not hear the music.”
        </p>
        <Image
          src={underquoteImg}
          alt="underquote"
          loading="eager"
          class="underquote mx-auto w-[700px] h-[300px] max-w-[90%] mt-4 unselectable"
        />
      </div>
    </section>
    <section id="description" class="section min-h-screen">
      <DescriptionSection />
    </section>
    <section id="dancer" class="section min-h-screen bg-white">
      <DancerSection />
    </section>
    <section id="dancerInfo" class="section min-h-screen">
      <DancerInfoSection />
    </section>
    <section id="teacher" class="section min-h-screen">
      <h1 class="bg-slate-600">Teacher</h1>
      <p class="bg-slate-600">Welcome to the teacher page</p>
    </section>
    <section id="choreographer" class="section min-h-screen">
      <h1 class="bg-slate-600">Choreographer</h1>
      <p class="bg-slate-600">Welcome to the choreographer page</p>
    </section>
    <section id="about" class="section min-h-screen">
      <h1 class="bg-slate-600">About</h1>
      <p class="bg-slate-600">Welcome to the about page</p>
    </section>
  </main>

  <style>
    #home {
      background-image: linear-gradient(
          rgba(189, 123, 18, 0.749),
          rgba(249, 213, 111, 0)
        ),
        url("/photos/homebg.jpg");
      background-repeat: no-repeat;
      background-size: cover;

      max-height: calc(100vh - 55px);
    }

    #description {
      background-color: #b8b7b7;
    }

    #dancer {
      background-image: linear-gradient(
          rgba(0, 0, 0, 0.822),
          rgba(39, 37, 37, 0.541)
        ),
        url("/photos/sketchbg.webp");
      height: fit-content;
      background-repeat: no-repeat;
      background-size: cover;
    }

    #dancerInfo {
      background-color: #06604e;
    }

    .quote {
      font-family: "Amatic SC";
      text-align: center;
      color: white;
      opacity: 0.6;
    }

    .home-profile {
      object-fit: cover;
      width: 100%;
      height: 500px;
    }

    .underquote {
      object-fit: cover;
      width: 100%;
      height: 10%;
    }

    .unselectable {
      user-drag: none;
      user-select: none;
      -moz-user-select: none;
      -webkit-user-drag: none;
      -webkit-user-select: none;
      -ms-user-select: none;
      pointer-events: none;
    }

    @media (max-width: 768px) {
      #home {
        padding-top: 25px;
      }
    }
  </style>
</Layout>
