---
import Layout from "../layouts/Layout.astro";
import DancerSection from "../components/DancerSection.astro";
import DescriptionSection from "../components/DescriptionSection.astro";
import DancerInfoSection from "../components/DancerInfoSection.astro";
import { Image } from "astro:assets";
import line2 from "../optimizedPhotos/line2.png";
import Teacher from "../components/Teacher.astro";
import flat from "../optimizedPhotos/flat.png";
import ChoreographerSection from "../components/ChoreographerSection.astro";
---

<Layout>
  <main>
    <section id="home" class="section min-h-screen">
      <img
        src="../photos/homeprofile.png"
        alt="home profile"
        loading="eager"
        class="home-profile max-h-[800px] max-w-[600px] mx-auto unselectable"
      />
      <div>
        <blockquote>
          “And those who were seen dancing were thought to be insane by those
          who could not hear the music.”
        </blockquote>
        <cite>- Friedrich Nietzsche</cite>
      </div>
    </section>
    <section id="description" class="section min-h-fit">
      <Image src={line2} alt="line" class="unselectable pt-8" />
      <DescriptionSection />
    </section>
    <section id="dancer" class="section min-h-screen bg-white">
      <DancerSection />
    </section>
    <section id="dancerInfo" class="section min-h-screen">
      <Image src={line2} alt="line" class="unselectable pt-8" />
      <DancerInfoSection />
      <Image src={flat} alt="teacher" />
    </section>
    <section id="teacher" class="section min-h-screen">
      <Image src={line2} alt="line" class="unselectable pt-8" />
      <Teacher />
    </section>
    <section id="choreographer" class="section min-h-screen">
      <Image src={line2} alt="line" class="unselectable pt-8" />
      <ChoreographerSection />
    </section>
  </main>

  <style>
    #home {
      background-image: linear-gradient(
          rgba(189, 123, 18, 0.749),
          rgba(249, 213, 111, 0)
        ),
        url("/photos/homebg.jpg");
      background-repeat: no-repeat;
      background-size: cover;

      max-height: fit-content;
    }

    #description {
      background-color: #b8b7b7;
    }

    #dancer {
      background-image: linear-gradient(
          rgba(0, 0, 0, 0.822),
          rgba(39, 37, 37, 0.541)
        ),
        url("/photos/sketchbg.webp");
      height: fit-content;
      background-repeat: no-repeat;
      background-size: cover;
    }

    #dancerInfo {
      background-color: #b8b7b7;
    }

    #teacher {
      background-color: #aaa7a6;
    }

    #choreographer {
      background-color: #b8b7b7;
    }

    blockquote {
      color: rgb(29, 32, 31);
      font-style: italic;
      font-size: 1.5rem;
      max-width: 600px;
      line-height: 1.4;
      margin: 0;
      padding: 0.5rem;
      text-align: center;
      position: absolute;
      top: 600px;
      opacity: 0;
      animation: slideUp 1.8s ease-in-out forwards;
    }

    @keyframes slideUp {
      0% {
        top: 600px;
        opacity: 0;
      }
      50% {
        opacity: 0.5;
      }
      100% {
        top: 520px;
        opacity: 1;
      }
    }

    cite {
      font-size: 1.1rem;
      line-height: 3;
      margin-left: 50vw;
      color: rgba(29, 32, 31, 0.931);
      position: absolute;
      top: 800px;
      opacity: 0;
      animation: slideUpCite 2.4s ease-in-out forwards;
    }

    @keyframes slideUpCite {
      0% {
        top: 800px;
        opacity: 0;
      }
      50% {
        opacity: 0.5;
      }
      100% {
        top: 680px;
        opacity: 1;
      }
    }

    .home-profile {
      object-fit: cover;
      width: 100%;
      height: 500px;
    }

    .unselectable {
      user-drag: none;
      user-select: none;
      -moz-user-select: none;
      -webkit-user-drag: none;
      -webkit-user-select: none;
      -ms-user-select: none;
      pointer-events: none;
    }
  </style>
</Layout>
