---
import Layout from "../layouts/Layout.astro";
import DancerSection from "../components/DancerSection.astro";
---

<Layout>
  <main>
    <div id="Home" class="section min-h-screen">
      <img
        src="/photos/homeprofile.png"
        alt="home profile"
        class="max-h-[500px] max-w-[400px] mx-auto pt-20 unselectable"
      />
      <div class="position:relative">
        <p class="text-3xl pt-10 quote text-center text-black opacity-80 mx-16">
          “And those who were seen dancing were thought to be insane by those
          who could not hear the music.”
        </p>
        <img
          src="/photos/underquotedark.webp"
          alt="underquote"
          class="mx-auto w-[700px] h-[300px] max-w-[90%] mt-4 unselectable"
        />
      </div>
    </div>
    <div id="Dancer" class="section min-h-screen bg-white">
      <DancerSection />
    </div>
    <div id="Teacher" class="section min-h-screen">
      <h1 class="bg-slate-600">Teacher</h1>
      <p class="bg-slate-600">Welcome to the teacher page</p>
    </div>
    <div id="Choreographer" class="section min-h-screen">
      <h1 class="bg-slate-600">Choreographer</h1>
      <p class="bg-slate-600">Welcome to the choreographer page</p>
    </div>
    <div id="About" class="section min-h-screen">
      <h1 class="bg-slate-600">About</h1>
      <p class="bg-slate-600">Welcome to the about page</p>
    </div>
  </main>
</Layout>

<style>
  #Home {
    background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.349)),
      url("/photos/homebg.jpg");
    height: 100vh;
    background-repeat: no-repeat;
    background-size: cover;
  }

  #Dancer {
    background-image: linear-gradient(
        rgba(0, 0, 0, 0.822),
        rgba(39, 37, 37, 0.541)
      ),
      url("/photos/sketchbg.webp");
    height: fit-content;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .quote {
    font-family: "itim";
    text-align: center;
    color: black;
  }

  .unselectable {
    user-drag: none;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    pointer-events: none;
  }

  @font-face {
    font-family: "itim";
    src: url(/fonts/Itim-Regular.ttf) format("truetype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
</style>
