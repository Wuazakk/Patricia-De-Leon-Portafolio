---
import Layout from "../layouts/Layout.astro";
import DancerSection from "../components/DancerSection.astro";
---

<Layout>
  <main>
    <div id="Home" class="section min-h-screen">
      <img
        src="/public/photos/homeprofile.png"
        alt="home profile"
        class="h-[600px] w-[400px] lg:h-[750px] lg:w-[500px] mx-auto pt-20 unselectable"
      />
      <h1 class="text-3xl pt-10 quote opacity-60">
        “And those who were seen dancing were thought to be insane by those who
        could not hear the music.”
      </h1>
    </div>
    <div id="Dancer" class="section min-h-screen bg-white">
      <DancerSection />
    </div>
    <div id="Teacher" class="section min-h-screen">
      <h1 class="bg-slate-600">Teacher</h1>
      <p class="bg-slate-600">Welcome to the teacher page</p>
    </div>
    <div id="Choreographer" class="section min-h-screen">
      <h1 class="bg-slate-600">Choreographer</h1>
      <p class="bg-slate-600">Welcome to the choreographer page</p>
    </div>
    <div id="About" class="section min-h-screen">
      <h1 class="bg-slate-600">About</h1>
      <p class="bg-slate-600">Welcome to the about page</p>
    </div>
  </main>
</Layout>

<style>
  #Home {
    background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.349)),
      url("/public/photos/homebg.jpg");
    height: 100vh;
    background-repeat: no-repeat;
    background-size: cover;
  }

  #Dancer {
    background-image: linear-gradient(
        rgba(0, 0, 0, 0.822),
        rgba(39, 37, 37, 0.541)
      ),
      url("/public/photos/sketchbg.webp");
    height: fit-content;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .quote {
    font-family: "itim";
    color: white;
    text-align: center;
  }

  .unselectable {
    user-drag: none;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-drag: none;
    -webkit-user-select: none;
    -ms-user-select: none;
    pointer-events: none;
  }

  @font-face {
    font-family: "itim";
    src: url(/public/fonts/Itim-Regular.ttf) format("truetype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
</style>
