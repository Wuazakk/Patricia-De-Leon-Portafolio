<style>
  .resume-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
    color: #333;
    background-color: #b4b2b0;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  }
  .header {
    text-align: center;
    padding: 20px 0;
    border-bottom: 2px solid #333;
  }
  .header h1 {
    margin: 0;
    font-size: 2.5em;
  }
  .header p {
    margin: 5px 0;
    font-size: 1.2em;
  }
  .section {
    padding: 20px 0;
    border-bottom: 1px solid #ddd;
  }
  .section:last-child {
    border-bottom: none;
  }
  .section h2 {
    font-size: 2em;
    margin-bottom: 10px;
    border-bottom: 2px solid #333;
    display: inline-block;
  }
  .section p {
    margin: 5px 0;
  }
  .education,
  .experience,
  .skills {
    padding: 10px 0;
  }
  .education .item,
  .experience .item,
  .skills .item {
    margin-bottom: 20px;
  }
  .item h3 {
    margin: 0;
    font-size: 1.5em;
  }
  .item span {
    display: block;
    font-size: 1.2em;
    color: #666;
  }
</style>
