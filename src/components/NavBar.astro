<div class="header h-[55px]">
  <h1 class="text-md text-center pt-4">PATRICIA DE LEÓN</h1>
</div>
<div class="burger-menu">
  <input type="checkbox" id="burger" />
  <label for="burger" class="burger">
    <img src="/icons/burger-menu-black.svg" class="nav-icon nav-icon-burger" />
    <img
      src="/icons/close-bold.svg"
      class="nav-icon nav-icon-close"
      style="display: none;"
    />
  </label>
</div>
<script>
  const burgerChecked = document.getElementById("burger");
  if (burgerChecked instanceof HTMLElement) {
    burgerChecked.addEventListener("change", () => {
      if (burgerChecked instanceof HTMLInputElement && burgerChecked.checked) {
        const navMenu = document.getElementById("nav-menu");
        const navIcon = document.getElementsByClassName("nav-icon");
        if (navMenu !== null) {
          navMenu.classList.add("show");
          navIcon[0].setAttribute("src", "/icons/close-bold.svg");
        }
      } else {
        const navMenu = document.getElementById("nav-menu");
        const navIcon = document.getElementsByClassName("nav-icon");
        if (navMenu !== null) {
          navMenu.classList.remove("show");
          navIcon[0].setAttribute("src", "/icons/burger-menu-black.svg");
        }
      }
    });
  } else {
    console.error("Burger menu not found");
  }
</script>
<div
  id="nav-menu"
  class="flex flex-col justify-between sticky h-full min-w-fit max-w-80 top-0 left-0 text-white p-4 pl-5"
>
  <div class="nav-content">
    <h1
      class="text-md sm:text-lg md:text-lg lg:text-2xl xl:text-2xl my-6 mx-auto"
    >
      PATRICIA DE LEÓN
    </h1>
    <nav>
      <ul class="text-decoration-none text-lg">
        <li
          class="nav-item text-gray-400 opacity-80 hover:text-white hover:opacity-100 transition"
        >
          <a href="/">Home</a>
        </li>
        <li
          class="nav-item text-gray-400 opacity-80 hover:text-white hover:opacity-100 transition"
        >
          <a href="/Dancer">Dancer</a>
        </li>
        <li
          class="nav-item text-gray-400 opacity-80 hover:text-white hover:opacity-100 transition"
        >
          <a href="/Teacher">Teacher</a>
        </li>
        <li
          class="nav-item text-gray-400 opacity-80 hover:text-white hover:opacity-100 transition"
        >
          <a href="/Choreographer">Choreographer</a>
        </li>
        <li
          class="nav-item text-gray-400 opacity-80 hover:text-white hover:opacity-100 transition"
        >
          <a href="/About">About Me</a>
        </li>
      </ul>
    </nav>
  </div>
  <div class="contact-btn">
    <button
      id="contact-me"
      class="py-3 px-5 rounded-lg transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 text-lg"
      >Contact Me</button
    >
  </div>
</div>

<style>
  /* Additional styles */
  #contact-me:hover {
    background-color: #c85c5c;
  }
  #nav-menu {
    background-color: #141517;
    min-height: 100vh;
    opacity: 0;
    visibility: hidden;
    transition:
      opacity 0.2s ease-in,
      visibility 0.3s ease-in,
      transform 0.4s ease-in;
    transform: translateX(-100%);
  }
  #nav-menu.show {
    opacity: 1;
    visibility: visible;
    transform: translateX(0);
  }
  .nav-item {
    padding: 12px 0;
  }

  .nav-icon {
    width: 2.5rem;
    height: 2.5rem;
    cursor: pointer;
  }
  .header {
    background-color: rgb(20, 21, 23);
    display: none;
  }
  #burger {
    display: none;
  }

  /* Define styles for the dot */
  .nav-item a::before {
    content: "";
    display: inline-block;
    width: 8px; /* Size of the dot */
    height: 8px; /* Size of the dot */
    margin-right: 8px; /* Spacing between dot and text */
    border-radius: 50%;
    background-color: transparent; /* Initial color of the dot */
    transition: background-color 0.5s ease; /* Smooth transition */
  }
  .burger-menu {
    display: none;
  }

  /* Hover styles for the dot */
  .nav-item:hover a::before {
    background-color: #c85c5c; /* Color of the dot when hovered */
  }

  /* Active (selected) styles for the dot */
  .nav-item.active a::before {
    background-color: #c85c5c; /* Color of the dot when selected */
  }

  /* Hide the menu by default on small screens */
  @media (max-width: 768px) {
    #nav-menu {
      position: fixed;
      justify-content: flex-start;
      padding-top: 50px;
      max-width: 100vw;
      width: 100%;
      z-index: 999;
    }
    .nav-content > h1 {
      text-align: center;
      font-weight: bold;
      font-size: larger;
      margin-bottom: 40px;
      margin-top: 0;
    }

    .nav-item {
      color: #ffffffbd;
      opacity: 1;
      padding: 18px;
    }

    .contact-btn {
      display: flex;
      justify-content: center;
      margin-top: calc(100vh - (100vh / 1.3));
    }

    #contact-me {
      background-color: #c85c5c;
      color: #ffffffe2;
      border: none;
    }

    .burger-menu {
      display: block;
      position: fixed;
      left: 16px;
      top: 8px;
      z-index: 1000;
    }
    #burger:checked ~ #nav-menu {
      display: block;
    }

    .header {
      display: block;
    }
  }
</style>
