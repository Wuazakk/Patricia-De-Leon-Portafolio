<style is:global>
  html {
    font-family: "Lora", system-ui, sans-serif;
    color: #fff;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    min-height: 100vh;
    min-width: 100vw;
  }
  main {
    flex: 1;
  }
  #nav-bg {
    background-color: #141517;
    min-height: 100vh;
  }
  .nav-item {
    padding: 8px 0; /* Adjust as needed */
  }

  /* Define styles for the dot */
  .nav-item a::before {
    content: "";
    display: inline-block;
    width: 8px; /* Size of the dot */
    height: 8px; /* Size of the dot */
    margin-right: 8px; /* Spacing between dot and text */
    border-radius: 50%;
    background-color: transparent; /* Initial color of the dot */
    transition: background-color 0.3s ease; /* Smooth transition */
  }

  /* Hover styles for the dot */
  .nav-item:hover a::before {
    background-color: #fff; /* Color of the dot when hovered */
  }

  /* Active (selected) styles for the dot */
  .nav-item.active a::before {
    background-color: #fff; /* Color of the dot when selected */
  }

  h1 {
    font-family: "montserrat";
  }

  @font-face {
    font-family: "montserrat";
    src: url(/fonts/Montserrat-Medium.ttf) format("truetype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Titillium";
